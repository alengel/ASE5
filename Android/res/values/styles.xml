<resources>
    
    <style name="AppBaseTheme" parent="android:Theme.Holo">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    
    <style name="MyActionBar" parent="android:style/Widget.Holo.ActionBar">
    	<item name="android:background">@drawable/actionbar</item>
	</style>
    
    <!-- Preferences theme. -->
    <color name="grey">#5C5C5C</color>
    <style name="PreferencesThemeText" parent="AppTheme">
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFCC</item>
    </style>
    
    <!-- Dialog theme. -->
    <style name="DialogThemeText" parent="AppTheme">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
    
    

