<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FollowerProfileActivity" >

    <ImageView
        android:id="@+id/reviewer_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:contentDescription="@string/user_image_description"
        android:src="@drawable/default_profile_picture" />

    <Button
        android:id="@+id/reviewer_follow_button"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/reviewer_image"
        android:layout_alignLeft="@+id/reviewer_name"
        android:layout_marginRight="10dp"
        android:background="@drawable/actionbar"
        android:text="@string/follow_button" />
        
    <TextView
        android:id="@+id/reviewer_name"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/reviewer_image"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/reviewer_image"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/orange"
        android:textSize="35sp" />

     <ListView
        android:id="@+id/reviewerVenueList"
        android:background="#80ffffff"
        android:layout_width="400dp"
        android:layout_height="340dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

    </ListView>

</RelativeLayout>