<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <PreferenceCategory 
        android:title="@string/pref_general_title"
        android:key="pref_key_general_settings"
        android:textColor="@android:color/white" >
        <EditTextPreference
            android:key="pref_key_interval"
            android:dependency="pref_key_general_settings"
            android:summary="@string/pref_summary_interval"
            android:title="@string/pref_title_interval"
            android:selectable="true"
            android:inputType="number" 
            android:defaultValue="10" />
        <Preference 
            android:key="pref_key_logging_period"
            android:dependency="pref_key_general_settings"
            android:summary="@string/pref_summary_logging_period"
            android:title="@string/pref_title_logging_period" />
    </PreferenceCategory>
    <PreferenceCategory 
        android:title="@string/pref_advanced_title"
        android:key="pref_key_advanced_settings">
        <Preference
            android:key="pref_key_distance"
            android:dependency="pref_key_advanced_settings"
            android:summary="@string/pref_summary_distance"
            android:title="@string/pref_title_distance" />
        <Preference 
            android:key="pref_key_storage_limit"
            android:dependency="pref_key_advanced_settings"
            android:summary="@string/pref_summary_storage_limit"
            android:title="@string/pref_title_storage_limit" />
    </PreferenceCategory>
    <PreferenceCategory 
        android:title="@string/pref_about_title"
        android:key="pref_key_about">
        <Preference
            android:key="pref_key_auto_delete"
            android:dependency="pref_key_about"
            android:summary="@string/pref_summary_version"
            android:title="@string/pref_title_version" />
    </PreferenceCategory>
</PreferenceScreen>